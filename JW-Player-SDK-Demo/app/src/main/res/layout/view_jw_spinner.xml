<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/jw_spinner_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="title"
            android:gravity="top|left"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_margin="10dp"/>
        <Button
            android:id="@+id/jw_spinner_qr"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@drawable/qr_btn"/>
        <Button
            android:id="@+id/jw_spinner_lcl"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@drawable/local_file_btn"/>
        <Button
            android:id="@+id/jw_spinner_edit"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@drawable/edit_btn"/>
        <Button
            android:id="@+id/jw_spinner_remove"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@drawable/remove_btn"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <Spinner
            android:gravity="center"
            android:id="@+id/jw_spinner_spinner"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/jw_spinner_go"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@drawable/go_btn"/>
    </LinearLayout>


</LinearLayout>