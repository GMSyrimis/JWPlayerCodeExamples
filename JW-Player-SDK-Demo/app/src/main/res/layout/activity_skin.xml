<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/BackgroundLayout"
    android:orientation="vertical"
    tools:context=".activities.SkinActivity">

    <LinearLayout
        style="@style/ScrollLayout"
        android:orientation="vertical">


        <LinearLayout
            style="@style/FieldContainer"
            android:orientation="horizontal">
            <TextView
                style="@style/Text.FieldLabel"
                android:text="Skin:" />

            <Spinner
                android:id="@+id/stretching_spinner"
                style="@style/FieldPayload" />

        </LinearLayout>

        <LinearLayout
            style="@style/FieldContainer"
            android:orientation="horizontal">

            <TextView
                style="@style/Text.FieldLabel"
                android:text="Skin Name:" />

            <EditText
                android:id="@+id/skin_name"
                style="@style/FieldPayload"
                android:hint="skin name"
                android:inputType="text" />
        </LinearLayout>

        <LinearLayout
            style="@style/FieldContainer"
            android:orientation="horizontal">

            <TextView
                style="@style/Text.FieldLabel"
                android:text="Skin Url:" />

            <EditText
                android:id="@+id/skin_url"
                style="@style/FieldPayload"
                android:hint="skin url"
                android:inputType="text" />

            <Button
                android:id="@+id/skin_url_qr"
                style="@style/SquareButton.Qr" />

            <Button
                android:id="@+id/skin_url_lcl"
                style="@style/SquareButton.Lcl" />
        </LinearLayout>

        <LinearLayout
            style="@style/FieldContainer"
            android:orientation="horizontal">

            <TextView
                style="@style/Text.FieldLabel"
                android:text="Skin Active:" />

            <EditText
                android:id="@+id/skin_active_hex"
                style="@style/FieldPayload"
                android:hint="#ffffff"
                android:inputType="text" />

            <View
                android:id="@+id/skin_active_selector"
                style="@style/SquareButton"
                android:background="#ffffff" />

        </LinearLayout>

        <LinearLayout
            style="@style/FieldContainer"
            android:orientation="horizontal">

            <TextView
                style="@style/Text.FieldLabel"
                android:text="Skin Inactive:" />

            <EditText
                android:id="@+id/skin_inactive_hex"
                style="@style/FieldPayload"
                android:hint="#ffffff"
                android:inputType="text" />

            <View
                android:id="@+id/skin_inactive_selector"
                style="@style/SquareButton"
                android:background="#ffffff" />

        </LinearLayout>


        <LinearLayout
            style="@style/FieldContainer"
            android:orientation="horizontal">

            <TextView
                style="@style/Text.FieldLabel"
                android:text="Skin Background:" />

            <EditText
                android:id="@+id/skin_background_hex"
                style="@style/FieldPayload"
                android:hint="#ffffff"
                android:inputType="text" />

            <View
                android:id="@+id/skin_background_selector"
                style="@style/SquareButton"
                android:background="#ffffff" />

        </LinearLayout>



    </LinearLayout>

    <Button
        android:id="@+id/skin_save_btn"
        style="@style/Text.Buttons.End"
        android:text="save" />

</LinearLayout>
